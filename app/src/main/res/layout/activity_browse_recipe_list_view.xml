<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".BrowseRecipeListView">
    <ImageView
        android:id="@+id/imageViewCard"
        android:layout_width="325dp"
        android:layout_height="120dp"
        android:background="@drawable/img_example_recipe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/revLayoutFoodCard"
        android:layout_width="310dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginTop="135dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtViewCardRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooked Coconut Mussels"
            android:textStyle="bold"
            android:textSize ="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard"
            app:layout_constraintStart_toStartOf="@id/revLayoutFoodCard"/>
        <TextView
            android:id="@+id/txtViewCookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="approximate 5 mins"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="0dp"
            app:layout_constraintStart_toStartOf="@id/revLayoutFoodCard"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard"/>
        <TextView
            android:id="@+id/txtViewNumberOfIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4 ingredients"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard"
            app:layout_constraintStart_toEndOf="@id/txtViewCookingTime" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_marginStart="5dp"
            app:srcCompat="@mipmap/card_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="@id/revLayoutFoodCard"
            app:layout_constraintStart_toEndOf="@id/txtViewNumberOfIngredient"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>