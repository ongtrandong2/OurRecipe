<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".BrowseRecipeListView">

    <ImageView
        android:id="@+id/imageViewCard"
        android:layout_width="332dp"
        android:layout_height="204dp"
        android:background="@drawable/img_example_recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/revLayoutFoodCard"
        android:layout_width="326dp"
        android:layout_height="75dp"
        android:layout_marginTop="132dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtViewCardRecipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cooked Coconut Mussels"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/revLayoutFoodCard"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard" />

        <TextView
            android:id="@+id/txtViewCookingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="50dp"
            android:text="approximate 5 mins"
            app:layout_constraintStart_toStartOf="@id/revLayoutFoodCard"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard" />

        <TextView
            android:id="@+id/txtViewNumberOfIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:text="4 ingredients"
            app:layout_constraintStart_toEndOf="@id/txtViewCookingTime"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toEndOf="@id/revLayoutFoodCard"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@id/txtViewNumberOfIngredient"
            app:layout_constraintTop_toTopOf="@id/revLayoutFoodCard"
            app:srcCompat="@mipmap/card_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>